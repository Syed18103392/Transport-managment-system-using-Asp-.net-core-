<!-- Modal -->
    <section class="blog_area section_gap">
        <div class="blogcontainer">
            <div class="container " style="max-width: 1312px !important;">
                <div class="row">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h1 class="modal-title" id="exampleModalLongTitle">Search For Reserve Transport</h1>
                                </div>
                                <div class="facultyRegistrationRequest modal-body   ">
                                    <!----------searchaction-->
                                    <form method="post">
                                        <div class="row form-group">
                                            <table style="width:500px;margin:auto;">
                                                <tr>
                                                    <td style="width: 90%;">
                                                        <input asp-for="@Model.txt" class="form-control" id="TextSearchInput" placeholder="Enter Your Requirement">
                                                    </td>
                                                    <td>
                                                        <button class="btn btn-success" id="ApplyTextSearchButton">Search</button>
                                                    </td>
                                                </tr>
                                            </table>
                                            <hr>
                                        </div>
                                    </form>
                                    <!----------searchaction-->
                                    <div class="searchviewtable">
                                        <table class=" uk-table" >
                                            <tr >

                                                <th style="padding:0 0 2px; text-align: center;font-size: 16px;color: black;font-weight: bold;">Transport Type</th>
                                                <th style="padding:0 0 2px;text-align: center;font-size: 16px;color: black;font-weight: bold;">Transport Number</thstyle="text-align:>
                                                <th style="padding:0 0 2px;text-align: center;font-size: 16px;color: black;font-weight: bold;">Driver Name</th>
                                                <th style="padding:0 0 2px;text-align: center;font-size: 16px;color: black;font-weight: bold;">Driver Number</th>
                                                <th style="padding:0 0 2px;text-align: center;font-size: 16px;color: black;font-weight: bold;">Route</th>
                                                <th style="padding:0 0 2px;text-align: center;font-size: 16px;color: black;font-weight: bold;">Current Status</th>

                                            </tr>
                                            @foreach (var item in Model.Tisearch)
                                            {
                                                var values = new string[] { item.TransportType, item.TransportNumber, item.DriverName, item.DriverNumber, item.route, item.Status };
                                                <tr style="text-align:center;">
                                                    @foreach (var value in values)
                                                    {
                                                        <td style="padding:0 2px 2px;">
                                                            @if (value == "Available")
                                                            {
                                                                <a class="btn btn-success" href="#modal-sections" uk-toggle>Booking</a>
                                                                <!--------------------------------------Decline View----------------------------------------------->
                                                                <div id="modal-sections" uk-modal>
                                                                    <div class="uk-modal-dialog">
                                                                        <button class="uk-modal-close-default" type="button" uk-close></button>
                                                                        <div class="uk-modal-header">
                                                                            <h4 class="uk-modal-title">Transportation Request Form</h4>
                                                                        </div>
                                                                        <form asp-action="transportRequest">
                                                                            <div class="uk-modal-body">
                                                                                <table>
                                                                                    <tr>
                                                                                        <td><label asp-for="@Model.txt">Transport Number:</label></td>
                                                                                        <td><input asp-for="@Model.txt" value="@item.TransportNumber"></td>
                                                                                    </tr>
                                                                                    <tr>
                                                                                        <td><label asp-for="@Model.rdate">Reserved Date:</label></td>
                                                                                        <td><input type="date" asp-for="@Model.rdate" placeholder="dd/mm/year"></td>
                                                                                    </tr>
                                                                                    <tr>
                                                                                        <td><label asp-for="@Model.rpurpose">Purpose:</label></td>
                                                                                        <td><input type="text" asp-for="@Model.rpurpose"></td>
                                                                                    </tr>
                                                                                </table>
                                                                            </div>
                                                                            <div class="uk-modal-footer uk-text-right">
                                                                                <input type="submit" value="Confirm" class="btn btn-success" />
                                                                                <button class="uk-button btn-danger uk-modal-close" type="button" style="color:white">No</button>
                                                                            </div>
                                                                        </form>
                                                                    </div>
                                                                </div>
                                                                <!---------------------------------------------Decline View------------------------------------------------->
                                                            }
                                                            else if (value != "Booked")
                                                            {
                                                                <eq-highlight-text text="@Model.txt" value=" @value" />
                                                                <!--  @value -->
                                                                }

                                                            </td>
                                                        }
                                                </tr>
                                            }
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                </div>
            </div>
        </section>
</center>

